
<section class="content">

  <div class="row">
		<!-- logo照片 -->
    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_terms_of_service_path, class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增
          <% end %>
          <small>&nbsp;條款再多都無用，只撈最後一筆</small>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>運費</th>
                <th>網站使用條款</th>
                <th>隱私權政策</th>
                <th>免責聲明</th>
                <th>管理</th>
              </tr>
            </thead>
            
            <tbody>
              <% @service.each do |s| %>
              <tr>
                <td><%= s.id %></td>
                <td><%= s.shipping_fee %></td>
                <td><%= s.terms %></td>
                <td><%= s.policy %></td>
                <td><%= s.disclaimer %></td>
                <td>
                <%= link_to "編輯", [:edit, :admin, s], class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除", [:admin, s], method: :delete, data: { confirm: "Are U sure?" }, class: "btn btn-warning btn-xs" %>
                </td>
              </tr>
              <% end %>
            </tbody>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
   
  </div>
</section>
