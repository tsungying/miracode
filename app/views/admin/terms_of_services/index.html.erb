<div id="page-wrapper">
  <div class="container-fluid">

    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">網站設定</h1>

        <div class="box">
          <div class="box-header">
          <%= link_to '編輯', [:edit, :admin, @service], class: "btn btn-danger btn-sm" %>
          </div>

          <div class="box-body">
            <table class="table table-striped table-bordered">
             
              <tbody>
                <tr>
                  <th width="15%">運費</th>
                  <td width="85%"><%= @service.shipping_fee %></td>
                </tr>   

                <tr>
                  <th>公司簡介</th>
                  <td><%= @service.company_intro %></td>
                </tr>  

                <tr>
                  <th>公司名稱</th>
                  <td><%= @service.company_name %></td>
                </tr>

                <tr>
                  <th>公司地址</th>
                  <td><%= @service.company_address %></td>
                </tr>

                <tr>
                  <th>公司電話</th>
                  <td><%= @service.company_phone %></td>
                </tr>

                <tr>
                  <th>公司信箱</th>
                  <td><%= @service.company_mail %></td>
                </tr>

                <tr>
                  <th>Facebook 粉絲團</th>
                  <td><%= @service.facebook_url %></td>
                </tr>

                <tr>
                  <th>Youtube 影片網址</th>
                  <td><%= @service.youtube_url %></td>
                </tr>

                <tr>
                  <th>營業時間</th>
                  <td><%= @service.open_time %></td>
                </tr>

                <tr>
                  <th>付款完成後,是否簡訊通知消費者?</th>
                  <td><%= @service.send_sms_to_user? ? '是' : '否' %></td>
                </tr>                

                <tr>
                  <th>簡訊通知消費者訊息</th>
                  <td>訂單編號：<%= Time.now.strftime('%Y%m%d%H%M%S%6N') %>，<%= @service.user_sms %></td>
                </tr>

                <tr>
                  <th>付款完成後,是否簡訊通知負責人?</th>
                  <td><%= @service.send_sms_to_ceo? ? '是' : '否' %></td>
                </tr>

                <tr>
                  <th>簡訊通知負責人訊息</th>
                  <td><%= @service.ceo_sms %>，消費金額為xxx，付款時間：<%= l(Time.now, format: :long ) %></td>
                </tr>

                <tr>
                  <th>負責人手機</th>
                  <td><%= @service.ceo_phone %></td>
                </tr> 

                <tr>
                  <th>網站使用條款</th>
                  <td><%= raw @service.terms %></td>
                </tr>

                <tr>
                  <th>隱私權政策</th>
                  <td><%= raw @service.policy %></td>
                </tr>  

                <tr>
                  <th>免責聲明</th>
                  <td><%= raw @service.disclaimer %></td>
                </tr>
              </tbody>

            </table>
          </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>   
  </div>
</div>
</div>