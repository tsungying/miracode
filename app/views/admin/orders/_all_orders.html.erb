    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">訂單列表</h1>
        <div class="box">
          <div class="box-header">

          </div>

          <div class="box-body">
            <table class="table table-striped table-bordered">
              <thead>
                <tr class="info">
                  <th>#</th>                  
                  <th>訂單編號</th>                  
                  <th>訂購人</th>
                  <th>訂購金額</th>
                  <th>付款方式</th>
                  <th>訂單狀態</th>
                  <th>訂購時間</th>
                  <th>變更訂單狀態</th>
                </tr>
              </thead>

              <tbody>
                <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= order.has_order_no? ? order.merchant_trade_no : nil %></td>
                  <td><%= order.user.name %></td>
                  <td><%= order.total %></td>
                  <td><%= order.payment.name %></td>
                  <td><%= order.order_status.name %></td>
                  <td><%= l(order.created_at, format: :long) %></td>
                  <td>
                    <%= render 'manage_order' %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="box-footer clearfix">
          <%= paginate @orders %>
          </div>

        </div>



      </div>
    </div>
    <!-- /.row -->