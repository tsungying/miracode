    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">已付款的訂單</h1>
        <div class="box">
          <div class="box-header">

          </div>

          <div class="box-body">
            <table class="table table-striped table-bordered">
              <thead>
                <tr class="info">
                  <th>#</th>
                  <th>訂單編號</th>                  
                  <th>訂購人</th>
                  <th>訂購金額</th>
                  <th>付款方式</th>
                  <th>訂單狀態</th>
                  <th>付款時間</th>
                  <th>變更訂單狀態</th>
                </tr>
              </thead>

              <tbody>
                <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= link_to order.merchant_trade_no, [:admin, order] %></td>
                  <td><%= order.user.name %></td>
                  <td><%= order.total %></td>
                  <td><%= order.payment.name %></td>
                  <td><%= order.order_status.name %></td>
                  <td><%= l(order.get_payment_time, format: :long) %></td>
                  <td><%= link_to '更新為已出貨', admin_order_path(order, change_status: 'shipped'), method: :put, 
                      remote: true, data: { confirm: "將訂單狀態更新為'已出貨'嗎？" },class: "btn bg-maroon btn-xs" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="box-footer clearfix">
          <%= paginate @orders %>
          </div>

        </div>



      </div>
    </div>
    <!-- /.row -->