
<section class="content">

  <div class="row">
		<!-- logo照片 -->
    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_home_page_path(type: "logo"), class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增Logo照片(x)
          <% end %>
          <small>&nbsp;Logo只顯示播放順序最高的那一張</small>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>Logo</th>
              <th>播放順序</th>
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>

            <% @home_logo.each do |home| %>
            <tr>
              <td><%= home.id %></td>
              <td>
              	<%= link_to admin_home_page_path(home, type: "logo") do %>
              		<%= image_tag home.logo_url, class: "img-thumbnail",width: "150", height: 'auto' %>
              	<% end %>
              </td>
              <td><%= home.play_order %></td>
              <td><%= l(home.updated_at, format: :long) %></td>
              <td><%= l(home.created_at, format: :long) %></td>              
              <td>
                <%= link_to "修改", edit_admin_home_page_path(home, type: "logo"), class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除此照片", [:admin, home], method: :delete, data: { confirm: "刪除此照片嗎？" }, class: "btn btn-warning btn-xs" %>
              </td>
            </tr>
            <% end %>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>

		<!-- Slider照片 -->
    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_home_page_path(type: "slider"), class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增Slider照片
          <% end %>
          <small>&nbsp;由上而下依序播放</small>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>Slider照片</th>
              <th>播放順序</th>
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>

            <% @home_slider.each do |home| %>
            <tr>
              <td><%= home.id %></td>    
             	<td>
	             	<%= link_to admin_home_page_path(home, type: "slider") do %>
	             		<%= image_tag home.slider_url, class: "img-thumbnail",width: "150", height: 'auto' %>
	             	<% end %>
             	</td>
              <td><%= home.play_order %></td>
              <td><%= l(home.updated_at, format: :long) %></td>
              <td><%= l(home.created_at, format: :long) %></td>              
              <td>
                <%= link_to "修改", edit_admin_home_page_path(home, type: "slider"), class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除此照片", [:admin, home], method: :delete, data: { confirm: "刪除此照片嗎？" }, class: "btn btn-warning btn-xs" %>
              </td>
            </tr>
            <% end %>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
    
  </div>
</section>
