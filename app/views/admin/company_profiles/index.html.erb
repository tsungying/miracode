
<section class="content">

  <div class="row">

    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_company_profile_path, class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增辦公室照片
          <% end %>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>辦公室照片</th>
              <th>播放順序</th>
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>

            <% @company_profiles.each do |profile| %>
            <tr>
              <td><%= profile.id %></td>
              <% unless profile.brand_story.blank? %>
              	<td><%= image_tag profile.brand_story_url, class: "img-thumbnail",width: "150", height: 'auto' %></td>
              <% else %>
              	<td><%= image_tag profile.office_image_url, class: "img-thumbnail",width: "150", height: 'auto' %></td>
              <% end %>
              <td><%= profile.play_order %></td>
              <td><%= l(profile.updated_at, format: :long) %></td>
              <td><%= l(profile.created_at, format: :long) %></td>              
              <td>
                <%= link_to "修改", edit_admin_company_profile_path(profile), class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除此照片", [:admin, profile], method: :delete, data: { confirm: "刪除此照片嗎？" }, class: "btn btn-warning btn-xs" %>
              </td>
            </tr>
            <% end %>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
    
  </div>
</section>
