
<section class="content">

  <div class="row">
		<!-- 辦公室照片 -->
    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_company_profile_path(type: "office"), class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增辦公室照片(945x464)
          <% end %>
          <small>&nbsp;由上而下依序播放</small>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>辦公室照片</th>
              <th>播放順序</th>
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>

            <% @about_office.each do |about| %>
            <tr>
              <td><%= about.id %></td>
              <td>
              	<%= link_to admin_company_profile_path(about, type: "office") do %>
              		<%= image_tag about.office_image_url, class: "img-thumbnail",width: "150", height: 'auto' %>
              	<% end %>
              </td>
              <td><%= about.play_order %></td>
              <td><%= l(about.updated_at, format: :long) %></td>
              <td><%= l(about.created_at, format: :long) %></td>              
              <td>
                <%= link_to "修改", edit_admin_company_profile_path(about, type: "office"), class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除此照片", [:admin, about], method: :delete, data: { confirm: "刪除此照片嗎？" }, class: "btn btn-warning btn-xs" %>
              </td>
            </tr>
            <% end %>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>

		<!-- 品牌故事 -->
    <div class="col-xs-12">
      <div class="box">
      
        <div class="box-header with-border">
          <%= link_to new_admin_company_profile_path(type: "brand_story"), class: "btn btn-danger btn-sm" do %>
            <li class="fa fa-fw fa-plus-square"></li> 新增品牌故事照片
          <% end %>
          <small>&nbsp;官網品牌故事照片只顯示播放順序最高的那一張</small>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>品牌故事照片</th>
              <th>播放順序</th>
              <th>更新時間</th>
              <th>建立時間</th>
              <th>管理</th>
            </tr>

            <% @about_brand_story.each do |about| %>
            <tr>
              <td><%= about.id %></td>    
             	<td>
	             	<%= link_to admin_company_profile_path(about, type: "brand_story") do %>
	             		<%= image_tag about.brand_story_url, class: "img-thumbnail",width: "150", height: 'auto' %>
	             	<% end %>
             	</td>
              <td><%= about.play_order %></td>
              <td><%= l(about.updated_at, format: :long) %></td>
              <td><%= l(about.created_at, format: :long) %></td>              
              <td>
                <%= link_to "修改", edit_admin_company_profile_path(about, type: "brand_story"), class: "btn btn-primary btn-xs" %>
                <%= link_to "刪除此照片", [:admin, about], method: :delete, data: { confirm: "刪除此照片嗎？" }, class: "btn btn-warning btn-xs" %>
              </td>
            </tr>
            <% end %>

          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div>
    
  </div>
</section>
