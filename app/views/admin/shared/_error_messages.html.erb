<% if object.errors.any? %>
	<div id="error_explanation">

	  <div class="alert alert-danger">
	    The forms contains <%= pluralize(object.errors.count, "error") %>
	  </div>

	  <ul class="list">
	    <% object.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>    
	    <% end %>
	  </ul>

	</div> 
<% end %>