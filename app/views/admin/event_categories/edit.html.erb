<section class="content-header">
  <h1>建立新分類
    <small><%= link_to "返回分類列表", admin_event_categories_path %></small>
  </h1>
</section>

<section class="content">

  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">

        <%= form_for [:admin, @event_category], html: { role: "form" } do |f| %>
          <div class="box-body">

            <%= render 'admin/shared/error_messages', object: @event_category %>          

            <div class="form-group">
              <%= f.label :name, "分類名稱" %>
              <%=f.text_field :name, placeholder: "Name", class: "form-control" %>
            </div>

          </div>

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        <% end %>

      </div><!-- /.box -->
    </div>
  </div>

</section><!-- /.content -->