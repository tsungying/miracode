<div class="product-page container"> 
	
	<div class="row">

		<% case params[:prod_category_id] %>
			<% when '1' %>
			  <iframe class="col-lg-12 col-md-12 col-sm-12 col-xs-12" width="" height="315" src="https://www.youtube.com/embed/eKUyMRzzmvw?autoplay=1" frameborder="0" allowfullscreen></iframe>
		  	<div class="col-md-12 col-sm-12 col-xs-12">&nbsp;</div>
				<div class="clear"></div>
			<% when '2' %>
			  <iframe class="col-lg-12 col-md-12 col-sm-12 col-xs-12" width="" height="315" src="https://www.youtube.com/embed/-Wb_vz43m4Q?autoplay=1" frameborder="0" allowfullscreen></iframe>
		  	<div class="col-md-12 col-sm-12 col-xs-12">&nbsp;</div>
		  	<iframe class="col-lg-12 col-md-12 col-sm-12 col-xs-12" width="" height="315" src="https://www.youtube.com/embed/xChhaGcn7b0" frameborder="0" allowfullscreen></iframe>
		  	<div class="col-md-12 col-sm-12 col-xs-12">&nbsp;</div>
		  	<iframe class="col-lg-12 col-md-12 col-sm-12 col-xs-12" width="" height="315" src="https://www.youtube.com/embed/y70xEz4woCU" frameborder="0" allowfullscreen></iframe>
		  	<div class="col-md-12 col-sm-12 col-xs-12">&nbsp;</div>
		  	<iframe class="col-lg-12 col-md-12 col-sm-12 col-xs-12" width="" height="315" src="https://www.youtube.com/embed/w1DgJvD223s" frameborder="0" allowfullscreen></iframe>
		  	<div class="col-md-12 col-sm-12 col-xs-12">&nbsp;</div>
				<div class="clear"></div>			
		<% end %>

		<div class="col-md-6">
			<div class="single-img">
				<div class="sp-wrap">
					<% @product.pictures.each do |picture| %>
						<%= link_to picture.img_url do %>
							<%= image_tag picture.img_url %>
						<% end %>
					<% end %>
				</div>
				<div id="test"></div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="single-desc">

				<div class="middle-single">								
					<h1><%= @product.name %></h1>
				  <div class="clear"></div>
				</div>
									
				<div class="single-price">
				   <ul>
						<li><span class="high-price">NT&nbsp;<%= @product.original_price %></span></li>
						<li><span class="low-price">NT&nbsp;<%= @product.selling_price %></span></li>
					</ul>
			  </div>

<!-- 				<div class="single-inputs row">
					<div class="col-md-6">
						<select class="select">
							<option value="Select Color">商品規格</option>
							<option value="White">自然棕</option>
							<option value="Black">自然黑</option>
							<option value="Red">酒紅棕</option>
							<option value="Blue">深邃黑</option>
						</select>
					</div>
				</div>	 -->		   

				<div class="single-descript">
				<%= raw @product.brief %>
				</div>

				<div class="share">
					<span>Share</span>
					<ul>
						<li><a href="#"><i class="fa fa-facebook"></i></a></li>
						<li><a href="#"><i class="fa fa-twitter"></i></a></li>
						<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
						<li><a href="#"><i class="fa fa-pinterest"></i></a></li>
						<li><a href="#"><i class="fa fa-instagram"></i></a></li>
						<li><a href="#"><i class="fa fa-envelope"></i></a></li>
					</ul>
				</div>

			</div>
		</div>
	</div>

</div>

	<!-- End Product Single -->
	<% case params[:prod_category_id] %>
		<% when '1' %>
		<%= render "category_1_description" %>
		<% when '2' %>
		<%= render "category_2_description" %>
		<% when '3' %>
		<%= render "category_3_description" %>
		<% when '4' %>
		<%= render "category_4_description" %>
	<% end %>



