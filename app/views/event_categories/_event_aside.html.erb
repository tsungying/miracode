							<aside>

								<div class="blog-search mb30">
									<%= form_tag search_event_path, method: :get do %>
										<%= text_field_tag :event_keyword, params[:event_keyword], placeholder: "搜尋促銷活動" %>
										<%= submit_tag "", name: nil %>
									<% end %>
								</div>

								<div class="shop-categories mb30">
									<h1 class="asidetitle">產品活動分類</h1>
									<ul>
										<% @event_categories.each do |category| %>
										<li>
											<%= link_to event_category_path(category) do %>
												<%= category.name %>	<span>(<%= category.events_count %>)</span>
											<% end %>
										</li>
										<% end %>
									</ul>
								</div>

								<div class="normal-tabs left-widget mb30">
									<div class="tabs-widget clearfix">
							    		<ul class="tab-links clearfix">
							    			<li class="active"><a href="#description">最新活動</a></li>
							    		</ul>

							    		<div id="description" style="display: block;">
							    			<ul>
							    				<% @events.each do |event| %>
							    				<li>
							    					<%= link_to event_category_event_path(event.event_category, event) do %>
							    						<%= event.title %>
							    						<%= raw event.summary %>
							    						<span><i class="fa fa-clock-o"></i><%= I18n.l(event.publish_at, format: :long ) %></span>
							    					<% end %>
							    				</li>
							    				<% end %>
							    			</ul>
							    		</div>

