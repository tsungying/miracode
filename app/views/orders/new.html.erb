												<div class="col-md-6">
													<%= f.label :name do %>收貨人姓名 <span>*</span><% end %>
													<%= f.text_field :name, placeholder: 'Name' %>
												</div>
												<div class="col-md-6">
													<%= f.label :phone do %>聯絡電話 <span>*</span><% end %>
